#!/bin/sh

readonly  DIST="bimodal.lua"
readonly SHORT="000300000" # ≈500 μs
readonly  LONG="300000000" # ≈500 ms

series="$1" # server part
indep="$2" # permillage of long requests
const="$3" # total num cores
name="$4" # experiment name
addr="$5" # server address

. wrk/client.sh
coregroup 0 "$const" -s"$DIST" "$URL/$SHORT" "/$LONG" "$indep" >"`logfile`" 2>&1
wait

logfile
